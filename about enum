#include<stdio.h>
enum week{Mon, Tue, Wed, Thur, Fri, Sat, Sun};
int main()
{
    enum week day;
    day = Wed;
    printf("%d",day);
    return 0;
}   

//Enumeration (or enum) is a user defined data type in C.
//It is mainly used to assign names to integral constants, 
//the names make a program easy to read and maintain.
#include<stdio.h>
enum week{Mon, Tue, Wed, Thur, Fri, Sat, Sun};
int main()
{
    enum week day;
    day = Wed;
    printf("%d",day);
    return 0;
}
//By default it starts from zero and 1,2,.....
//we cannot reintialize or change the values to enum inside main()
#include<stdio.h>
enum year{Jan, Feb, Mar, Apr, May, Jun, Jul,
          Aug, Sep, Oct, Nov, Dec};
int main()
{
   int i;
   for (i=Jan; i<=Dec; i++)     
      printf("%d ", i);
       
   return 0;
}
//thru for loop we can acces the enum values
#include <stdio.h>
enum State {Working = 1, Failed = 0, Freezed = 0};
int main()
{
   printf("%d, %d, %d", Working, Failed, Freezed);
   return 0;
}
//we can intialize the values in the enum 
