#include <stdio.h>
# define LEN_ARR 5
int main()
{
   int arr[]={10,20,30,40,50};
   int *ptr=arr;
   int temp;
   for(int i=0;i<LEN_ARR;i++)
   {
   printf("the values are:%d\n",ptr[i]);
   }
   for(int i=0;i<LEN_ARR/2;i++)
   {
   temp=ptr[i];
   ptr[i]=ptr[LEN_ARR-(i+1)];
   ptr[LEN_ARR-(i+1)]=temp;
   }
   
   printf("after swapping the values are:");
   for(int i=0;i<LEN_ARR;i++)
   printf("%d ",ptr[i]);

    return 0;
}
