int sum(int arr[],int a)

{
    int sum=0;
  for(int i=0;i<a;i++)
      sum=sum+arr[i];
     return sum; 
  }

int main()
{ int arr[]={1,2,3};
    int s=0;
    int (*fptr)(int[],int);
    fptr=sum;
    s=(*fptr)(arr,3);
    printf("%d",s);

