double size_x(double a)
{
  int result=(char*)(&a+1)-(char*)(&a);
   return result;
}
int main()
{
    int s=0;
    double (*fptr)(double);
    fptr=size_x;
    s=(*fptr)(52444545);
    printf("%d",s);

    return 0;
}
